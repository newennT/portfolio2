                <a href="{{ path('app_projet_show', {'slug': projet.slug}) }}">
                    <div class="projet projet-item">
                        <div class="overlay">
                            <p>{{ projet.nom }}</p>
                        </div>
                        
                        <img src="{{ asset('uploads/' ~ projet.cover) }}" alt="Image de couv"></td>
                    </div>
                </a>
                {% endif %}
            {% endfor %}
            
        </div>

    </div>

</div>

{% endblock %}