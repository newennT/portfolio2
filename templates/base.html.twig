<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %} - Newenn Turbiau - Graphiste freelance Rennes</title>
        <meta name="description" content="{% block metadescription %}{% endblock %}">
        <link rel="icon" href="{{ asset('img/favicon-portfolio.svg') }}">
        <meta property="og:image" content="{% block metaimage %}{% endblock %}">
        <meta property="og:image:alt" content="{% block metadescriptionimage %}{% endblock %}">
        <meta property="og:url" content="{{ absolute_url(app.request.uri) }}">
        <meta property="og:type" content="website">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.7/dist/gsap.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.7/dist/ScrollTrigger.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% include "partials/header.html.twig" %}
        {% block body %}{% endblock %}
        {% include "partials/footer.html.twig" %}

        <div class="motifs-fond"></div>
    </body>
</html>
