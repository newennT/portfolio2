{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<div class="categories-section">
    <h1>Catégories</h1>

        {% for categorie in categories %}

        <a href="{{ path('app_categorie_show', {'slug': categorie.slug}) }}">
            <p>{{ categorie.nom }}</p>
        </a>        

        {% endfor %}
</div>

{% endblock %}
